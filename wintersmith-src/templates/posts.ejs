            </nav>
        </div>
    </div>

    <div class="heading text-center">
        <div class="row">
            <div class="small-12 columns">
                <h1>Blog Posts</h2>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="small-12 columns">
        <ul class="small-block-grid-1 project-list">
        <% fileNames.forEach(function(fileName) { %>
        <% if (contents.posts[fileName].metadata) { %>

            <% include _post_list_item.ejs %>

        <% } %>
        <% }); %>
            </ul>
        </div>
    </div>

    <% include _footer.ejs %>
</body>
